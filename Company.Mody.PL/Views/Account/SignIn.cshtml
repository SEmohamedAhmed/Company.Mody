@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "SignIn";

}
@model SigninViewModel


<div class="container">
    <div class="card">
        <div class="card_title">
            <h1>Sign In</h1>
            <span>Don't have an account? <a asp-action="Signup">Sign Up</a></span>
        </div>
        <div class="form">
            <form asp-action="Signin" >
                <input asp-for="Email" placeholder="Email" required />
                <input asp-for="Password" placeholder="Password" required />
                <input id="submit" type="submit" value="Sign In" />
                <div class="card_terms">
                    <input asp-for="RemeberMe" type="checkbox" > <label asp-for="RemeberMe"> Remeber Me? </label>
                </div>
                <a asp-action="ForgotPassword">Forgot Your Password? </a>
            </form>
        </div>
    </div>
</div>

@if (ViewData["ErrorMessage"] != null)
{
    var tmp = @Html.Raw(ViewData["ErrorMessage"]);
    <script>
        window.onload = function() {
            alert("@tmp ");
        };
    </script>

}
