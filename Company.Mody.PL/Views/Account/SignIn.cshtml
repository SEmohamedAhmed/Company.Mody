@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "SignIn";
}
@model SigninViewModel

<div class="container">
    <div class="card">
        <div class="card_title">
            <h1>Sign In</h1>
            <span>Don't have an account? <a asp-action="Signup">Sign Up</a></span>
        </div>
        <div class="form">
            <form asp-action="Signin">
                <input asp-for="Email" placeholder="Email" required />
                <input asp-for="Password" placeholder="Password" required />
                <input id="submit" type="submit" value="Sign In" />
                <div class="card_terms">
                    <input asp-for="RemeberMe" type="checkbox"> <label asp-for="RemeberMe"> Remeber Me? </label>
                </div>
                <a asp-action="ForgotPassword">Forgot Your Password? </a>
            </form>

        </div>
        <div class="form" style="text-align: center; width: auto;">
            <div style="display: flex; justify-content: center; gap: 10px;  ">
                <!-- Google Login Form -->
                <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                    <input type="hidden" name="provider" value="Google" />
                    <input type="hidden" name="returnUrl" value="~/" />
                    <button type="submit" title="Sign in with Google" style="border: none; background: transparent; cursor: pointer;">
                        <img src="https://developers.google.com/identity/images/g-logo.png" alt="Google" width="32" height="32" />
                    </button>
                </form>

                <!-- Facebook Login Form -->
                <form asp-controller="Account" asp-action="ExternalLogin" method="post">
                    <input type="hidden" name="provider" value="Facebook" />
                    <input type="hidden" name="returnUrl" value="~/" />
                    <button type="submit" title="Sign in with Facebook" style="border: none; background: transparent; cursor: pointer;">
                        <img src="https://upload.wikimedia.org/wikipedia/commons/5/51/Facebook_f_logo_%282019%29.svg" alt="Facebook" width="32" height="32" />
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@if (ViewData["ErrorMessage"] != null)
{
    var tmp = @Html.Raw(ViewData["ErrorMessage"]);
    <script>
        window.onload = function () {
            alert("@tmp");
        };
    </script>
}
