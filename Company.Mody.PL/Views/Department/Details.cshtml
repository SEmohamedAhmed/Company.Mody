@model Department

@{
    ViewData["Title"] = "Details";
}

<h1>Department Details</h1>


<div >
    <div class="form-group">
        <label asp-for="Code" class="col-form-label">Code</label>
        <input asp-for="Code" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input asp-for="Name" class="form-control" type="text" readonly />
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label">Date Of Creation</label>
        <input asp-for="DateOfCreation" class="form-control" readonly />

    </div>
    <br />
    <a asp-action="Update" asp-route-id=@Model.Id class="btn btn-warning">Update</a>
    <a asp-action="Index" class="btn btn-light">Back to departments list</a>

</div>