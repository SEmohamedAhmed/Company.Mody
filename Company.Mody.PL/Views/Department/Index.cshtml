@using Company.Mody.DAL.Models

@model IEnumerable<Department>

@{
    ViewData["Title"] = "Index";
}

<h1>All Departments</h1>

<br />
<br />

<form>
    <div class="container m-4">
        <div class="row">
            <div class="col-6">
                <input placeholder="Search Department By Name" type="text" id="Keyword" name="Keyword" class="form-control" value="@Context.Request.Query["Keyword"]" />
            </div>
            <div class="col-6">
                <input type="submit" value="Search" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>


<br />
<br />

<a asp-controller="Department" asp-action="Add" class="btn btn-primary">Create Department</a>
<br />
<br />



<!-- Container to update search results dynamically -->
<div id="departmentResults">
    <partial name="PartialViews/_DepartmentTable"></partial>
</div>
