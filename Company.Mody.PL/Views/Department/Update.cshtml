@model Department
@{
    ViewData["Title"] = "Update";
}

<h1>Update Department</h1>



<br />
<br />


<form  method="post">
    <div class="form-group">
        <label asp-for="Code" class="col-form-label">Code</label>
        <input asp-for="Code" class="form-control" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Name" class="col-form-label">Name</label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateOfCreation" class="col-form-label">Date Of Creation</label>
        <input asp-for="DateOfCreation" class="form-control" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>

    </div>
    <br />
    <input asp-action="Update" type="submit" value="Update" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back to departments list</a>

</form>