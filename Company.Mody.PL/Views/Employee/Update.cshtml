@model EmployeeDto
@{
    ViewData["Title"] = "Update";
}

<h1>Update Employee</h1>



<br />
<br />


<form method="post" enctype="multipart/form-data" class="needs-validation" novalidate>
    <!-- Show general validation errors -->
    @if (!ViewData.ModelState.IsValid)
    {
        <div asp-validation-summary="All" class="alert alert-danger"></div>
    }


    <partial name="\PartialViews\_AddUpdatePartial.cshtml" @*model="Model"*@ />

    <br />

    <input hidden asp-for="ImageName"/>

    <input asp-action="Update" type="submit" value="Update" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">Back to employees list</a>

</form>

@section JQueryValidation {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

}