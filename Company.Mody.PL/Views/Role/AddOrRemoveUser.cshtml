@model List<AddRemoveRoleToUser>

@{
    ViewData["Title"] = "AddOrRemoveUser";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var RoleId = ViewData["RoleId"] as string;
}


<form asp-action="AddOrRemoveUser" asp-route-roleId=@RoleId>
    
    @for (int i = 0; i < Model.Count; ++i)
    {
        <div class="form-group">
            <input asp-for="@Model[i].HasRole" />
            <label asp-for="@Model[i].HasRole">@Model[i].UserName</label>
        </div>

        <input type="hidden" asp-for="@Model[i].Id" />
        <input type="hidden" asp-for="@Model[i].UserName" />


    }


    <input type="submit" name="name" value="Update" class="btn btn-success" />
    <a asp-action="Update" class="btn btn-light" asp-route-id="@RoleId">Cancel</a>

</form>


